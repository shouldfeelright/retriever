{
  "manifest_version": 3,
  "name": "Retriever",
  "version": "1.0",
  "description": "Retrieve DNS hosting and registrar information for any domain.",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Scan Domain"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://dns.google/*",
    "https://who.is/*"
  ]
}