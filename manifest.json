{
  "manifest_version": 3,
  "name": "Retriever",
  "version": "1.0.0",
  "description": "Retriever is a browser extension that instantly retrieves DNS hosting, registrar, and status data for any domain.",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Retriever"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://dns.google/*",
    "https://rdap.org/*",
    "https://who.is/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}